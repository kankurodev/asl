extends layout

block content
    div.container
        h1.mt-3= title
        div.mt-5
            form(method='POST' action='/registered')
                div.form-group
                    label(for='username') Username:
                    input#username.form-control(type='text', placeholder='user123' name='username' required)
                div.form-group
                    label(for='email') Email:
                    input#email.form-control(type='email', placeholder='name@email.com' name='email' required)
                div.form-group
                    label(for='pw') Password:
                    input#pw.form-control(type='password' name='password' required)
                div.form-group
                    label(for='confirmPass') Confirm Password:
                    input#confirmPass.form-control(type='password' name='confirmPass' required)
                button.btn.btn-primary(type='submit') Register